<div class="s3" id="<%= dom_id(stream) %>">
  <%= link_to(stream, style: 'text-decoration: none; color: inherit;') do %>
    <div class="card">
      <div class="card-image">
        <%= vite_image_tag 'images/default_thumbnail.webp', style: 'aspect-ratio: 16 / 9;' %>
      </div>
      <div class="card-content">
        <span class="card-title"><%= stream.stream_configuration.title %></span>
        <p>@<%= stream.handle %></p>
      </div>
    </div>
  <% end %>
</div>
